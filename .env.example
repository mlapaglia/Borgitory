# Copy this file to .env and adjust values as needed

# Application Configuration
SECRET_KEY=your-secret-key-change-in-production-please-use-a-long-random-string
DATABASE_URL=sqlite:///./data/borgitory.db
DATA_DIR=./data

# Docker Configuration
BORG_DOCKER_IMAGE=ghcr.io/borgmatic-collective/borgmatic:latest

# Optional: Logging Configuration
LOG_LEVEL=INFO

# Optional: Authentication Configuration
# Set to 'false' to disable authentication (NOT RECOMMENDED for production)
ENABLE_AUTH=true

# Optional: S3 Configuration (can also be configured via web UI)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1